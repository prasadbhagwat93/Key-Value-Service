package kvstore;
import org.apache.thrift.TException;
import org.apache.thrift.protocol.TBinaryProtocol;
import org.apache.thrift.protocol.TProtocol;
import org.apache.thrift.transport.TSocket;
import org.apache.thrift.transport.TTransport;

public class kvclient {
	 public static void main(String [] args) {
		 try{
			 if(args.length >1){
			TTransport transport;
			String[] token = args[1].split(":");
		    transport = new TSocket(token[0], Integer.parseInt (token[1]));
		    transport.open();
		    TProtocol protocol = new  TBinaryProtocol(transport);
		    KVStore.Client client = new  KVStore.Client(protocol);
		    String request = "";
		    if(args.length >3){
		    	request = args[2];
			    execute(client,args);
			    transport.close();
		    }
			 }
		    else{
		    	System.out.println("Not a good command");
		    }
		    
		 }
		 catch(Exception e){
			 
		 }
	 }
	 public static void execute(KVStore.Client client, String args[]) throws TException{
		 Result res = null;
		 switch (args[2]) {
		 
		 case "-set" :
			  res = client.kvset(args[3],args[4]);
			 System.out.println(res.error.getValue());
			 break;
		 case "-get" :
			 res = client.kvget(args[3]);
			 System.out.println(res.error.getValue());
			 System.out.println(res.value);
			 break;
		 case "-delete" :
			 res = client.kvdelete(args[3]);
			 System.out.println(res.error.getValue());
			 break;
			 
		default: 
			System.out.println("Some error in command");
		 
		 }
		 
	 }

}
